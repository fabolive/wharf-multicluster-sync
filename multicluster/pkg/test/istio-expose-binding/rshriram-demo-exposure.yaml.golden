apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  creationTimestamp: null
  name: dest-rule-server-default-notls
  namespace: ns2
spec:
  host: server.default.svc.cluster.local
  subsets:
  - name: notls
    trafficPolicy:
      tls: {}
---
apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
  creationTimestamp: null
  name: istio-ingressgateway-server-ns2
  namespace: ns2
spec:
  selector:
    istio: ingressgateway
  servers:
  - hosts:
    - server.ns2.svc.cluster.global
    port:
      name: server-ns2-80
      number: 80
      protocol: TLS
    tls:
      mode: SIMPLE
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  creationTimestamp: null
  name: ingressgateway-to-server-ns2
  namespace: ns2
spec:
  gateways:
  - istio-ingressgateway-server-ns2
  hosts:
  - server.ns2.svc.cluster.global
  tls:
  - match:
    - port: 80
      sniHosts:
      - server.ns2.svc.cluster.global
    route:
    - destination:
        host: server
        port:
          number: 80
        subset: notls
